ADDSUM   CLC
         ADC $31       ;CHKSUM
         ADC #$00
         STA $31       ;CHKSUM
         RTS
POKEY    STA $D20F     ;SKCTL
         STA $D20A     ;SKRES
         LDA #$28
         STA $D208     ;AUDCTL
         LDA #$A8
         STA $D207     ;AUDC4
         LDA #$F8
         STA $D20E     ;IRQEN
         RTS

C3F	.byte $3f,$40
	.word $0001
	.word $0001
	.word $0001
LWTBL	.dsb 8
