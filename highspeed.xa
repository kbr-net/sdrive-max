PUTBYTE  TAX
PUTA1    LDA $D20E     ;IRQST
         AND #$10
         BNE PUTA1
         LDA #$EF
         STA $D20E     ;IRQEN
         LDA #$D0
         STA $D20E     ;IRQEN
         TXA
         STA $D20D     ;SEROUT
         LDX $D20E     ;IRQST
