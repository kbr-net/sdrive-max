         LDA $01
REL05    STA LWTBL-1,X ;$F614
SIO21    LDY #$00
SIO21CL  PLA
         STA $0302,Y   ;DCOMND
         INY
         CPY #$08
         BCC SIO21CL
SIO3     SEI
         TXA
         ORA $300
         STA $023A     ;CDEVIC
         LDA $0302     ;DCOMND
         STA $023B     ;CCOMND
         LDA $030A     ;DAUX1
         STA $023C     ;CAUX1
         LDA $030B     ;DAUX2
         STA $023D     ;CAUX2
REL06    LDA LWTBL-1,X ;$F614
         STA $D204     ;AUDF3
         TSX
         STX $3F       ;FEOF
         LDA #$02
         STA $37       ;DRETRY
IO11     LDA #$07
         STA $36       ;CRETRY
IO12     LDA #$34
         STA $D303
         LDA #$00
         STA $30       ;STATUS
         STA $3E       ;FTYPE
         STA $35       ;BUFEND+1
         STA $D206     ;AUDF4
         LDA #$3A
         STA $32       ;BUFADR
         LDA #$02
         STA $33       ;BUFADR+1
