         STA $32       ;BUFADR
         LDA $0305     ;DBUFHI
         STA $33       ;BUFADR+1
         LDA $0308     ;DBYTLO
         STA $34       ;BUFEND
         LDA $0309     ;DBYTHI
         STA $35       ;BUFEND+1
         LDA $0303     ;DSTATS
         BPL IO2
REL08    JSR SEND1     ;$F4DC
IO2      DEC $3E       ;FTYPE
REL09    JSR SETTI1    ;$F544
         BIT $0303     ;DSTATS
         BVC IO3
REL10    JSR GETA1     ;$F521
IO3      LDA #$A0
         STA $D207     ;AUDC4
         LDA $10
         STA $D20E     ;IRQEN
REL11    JSR CLRTI1    ;$F576
         LDA $30       ;STATUS
         BEQ IO4
         DEC $37       ;DRETRY
         BNE IO11
IO4      TAY
         BNE IO5
         INY
IO5      STY $0303     ;DSTATS
         CLI
         RTS
SEND1    LDY #$00
SE1      INY
         BNE SE1
         LDA #$23
REL12    JSR POKEY     ;$F5F7
         LDA ($32),Y   ;BUFADR
         STA $31       ;CHKSUM
         STA $D20D     ;SEROUT
         INY
         BNE SE3
SE2      LDA ($32),Y   ;BUFADR
REL13    JSR PUTBYTE   ;$F5D4
         INY
         BNE SE3
         INC $33       ;BUFADR+1
         DEC $35       ;BUFEND+1
         LDX #$E0
SEWL     INX
         BNE SEWL
SE3      CPY $34       ;BUFEND
         BNE SE2
         LDA $35       ;BUFEND+1
         BNE SE2
         LDA $31       ;CHKSUM
REL14    JSR PUTBYTE   ;$F5D4
SEO1     LDA $D20E     ;IRQST
         AND #$08
         BNE SEO1
         LDY #$03
REL15    JSR STOUTX0   ;$F578
         LDA #$C0
         STA $D20E     ;IRQEN
         BNE RDQUIT
GETA1    LDY #$00
         STY $31       ;CHKSUM
GE1      JSR GETBYTE   ;$F5B1
         STA ($32),Y   ;BUFADR
REL16    JSR ADDSUM    ;$F5EF
         INY
         BNE GE2
         INC $33       ;BUFADR+1
