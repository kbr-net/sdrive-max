         BEQ CLRTI1
         CMP #$43
         BEQ CLRTI1
         CMP #$45
         BEQ ERR90
         LDA #$8B
         BNE ERR
ERR90    LDA #$90
         STA $30       ;STATUS
CLRTI1   LDY #$00
STOUTX0  LDX #$00
STOUT    LDA ERRABS    ;$F
         STA $0226     ;CDTMA1
STOU2    LDA ERRABS+1  ;$F
         STA $0227     ;CDTMA1+1
         LDA #$01
         JMP $E45C     ;Setze CDTMV1
ERRABS   .word ERR8A   ;$F
IOER80   LDX $3F       ;FEOF
         TXS
         LDA #$80
         STA $30       ;STATUS
         BNE EABS3
ERR8F    LDA #$8F
         .byte $2C
ERR8A    LDA #$8A      ;Timeout
ERR      STA $30       ;STATUS
         LDX $3F       ;FEOF
         TXS
         LDA $3E       ;FTYPE
         BMI ERRA
         DEC $36       ;CRETRY
         BEQ ERRA
REL21    JMP IO12      ;$F47A
ERRA     LDA #$28
         STA $D204     ;AUDF3
EABS3    JMP IO3       ;$F4C1
GETBYTE  LDA $D20E     ;IRQST
         BPL IOER80
         AND #$20
         BNE GETBYTE
         LDA #$DF
         STA $D20E     ;IRQEN
         LDA #$E0
         STA $D20E     ;IRQEN
         LDA $D20F     ;SKSTAT
         STA $D20A     ;SKRES
         BPL ERR8A
         AND #$20
         BEQ ERR8A
         LDA $D20D     ;SERIN
